<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <TextView
                android:id="@+id/tV_bail"
                android:layout_width="123dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="600"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toEndOf="@+id/tV_bail3"
                app:layout_constraintTop_toBottomOf="@+id/tv_Status" />

            <TextView
                android:id="@+id/tV_bail2"
                android:layout_width="109dp"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:text="OpÅ‚ata:"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/tV_bail3" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_room" />

            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Nazwa"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <TextView
                android:id="@+id/tv_Status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Status"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/tv_Title" />

            <TextView
                android:id="@+id/tV_bail3"
                android:layout_width="109dp"
                android:layout_height="20dp"
                android:text="Kaucja:"
                android:paddingLeft="4dp"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/tv_Status" />

            <TextView
                android:id="@+id/tV_rentFee"
                android:layout_width="123dp"
                android:layout_height="21dp"
                android:gravity="center"
                android:text="600"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toEndOf="@+id/tV_bail2"
                app:layout_constraintTop_toBottomOf="@+id/tV_bail" />

            <TextView
                android:id="@+id/tV_desc"
                android:layout_width="232dp"
                android:layout_height="46dp"
                android:padding="4dp"
                android:text="Opis"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/tV_bail2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>