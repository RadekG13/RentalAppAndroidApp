<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_Cancel"

        android:layout_width="165dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:text="Anauluj"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bt_Add"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/bt_Add"
        app:layout_constraintTop_toBottomOf="@+id/bt_Add" />

    <Button
        android:id="@+id/bt_Add"
        style="@style/Widget.AppCompat.Button.Colored"

        android:layout_width="330dp"
        android:layout_height="64dp"
        android:text="Dodaj"
        app:layout_constraintBottom_toTopOf="@+id/bt_Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eT_Desc" />

    <EditText
        android:id="@+id/eT_Desc"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:background="@drawable/custom_input"
        android:gravity="clip_horizontal"
        android:hint="Opis"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eT_Address" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:src="@drawable/ic_apartaments"
        app:layout_constraintBottom_toTopOf="@+id/eT_Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eT_Address"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/custom_input"
        android:hint="Adres"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/eT_Desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>